            "additionalProperties": false,
			"properties": {
				"name": {
					"type": "string"
				},
				"wert": {
					"type": "string"
				}
			},
			"required": [
				"name",
				"wert"
			],
			"type": "object"
					},
					"type": "array"
				},
				"zugangDav": {
          "additionalProperties": false,
			"properties": {
				"adresse": {
					"type": "string"
				},
				"passWord": {
					"type": "string"
				},
				"port": {
					"type": "string"
				},
				"userName": {
					"type": "string"
				}
			},
			"required": [
				"userName",
				"passWord",
				"adresse",
				"port"
			],
			"type": "object"
				},
