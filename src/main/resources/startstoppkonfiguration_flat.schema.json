		"global": {
      "additionalProperties": false,
			"properties": {
				"kernsysteme": {
					"items": {
            "additionalProperties": false,
			"properties": {
				"inkarnationsName": {
					"type": "string"
				},
				"wartezeit": {
					"type": "number"
				},
				"mitInkarnationsName": {
