			"required": [
				"pid"
			],
			"type": "object"
				},
				"rechner": {
					"items": {
            "additionalProperties": false,
			"properties": {
				"name": {
					"type": "string"
				},
				"tcpAdresse": {
					"type": "string"
				}
			},
			"required": [
				"name",
				"tcpAdresse"
