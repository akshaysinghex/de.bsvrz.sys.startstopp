          "additionalProperties": false,
			"properties": {
				"option": {
					"type": "string",
					"enum": [
						"beenden",
						"abbruch",
						"ignorieren"
					],
					"default": "ignorieren"
				},
				"wiederholungen": {
					"type": "number"
				}
