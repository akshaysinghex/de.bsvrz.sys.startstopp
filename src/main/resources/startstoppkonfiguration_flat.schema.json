			"additionalProperties": false,
			"properties": {
				"aenderungsGrund": {
					"type": "string"
				},
				"erstelltAm": {
					"type": "string"
				},
				"erstelltDurch": {
					"type": "string"
				},
				"versionsNummer": {
					"type": "string"
				}
			},
			"required": [
				"erstelltDurch",
				"versionsNummer",
				"aenderungsGrund",
				"erstelltAm"
			],
			"type": "object"
		}
	},
	"required": [
		"global",
		"inkarnationen",
		"metaDaten"
	],
	"type": "object"
}
