					"type": "string"
				},
				"startArt": {
          "additionalProperties": false,
			"properties": {
				"option": {
					"type": "string",
					"enum": [
						"automatisch",
						"manuell",
						"intervallrelativ",
						"intervallabsolut"
					],
					"default": "automatisch"
