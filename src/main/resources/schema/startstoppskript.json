

    {
	"$schema": "http://json-schema.org/draft-04/schema#",
	"additionalProperties": false,
	"id": "http://bitctrl.de/startstoppskript.json",
	"properties": {
		"global": {
			"$ref": "#definitions/global"
		},
		"inkarnationen": {
			"items": {
				"$ref": "#definitions/inkarnationsDefinition"
			},
			"type": "array"
		},
		"metaDaten": {
			"additionalProperties": false,
			"properties": {
				"aenderungsGrund": {
					"type": "string"
				},
				"erstelltAm": {
					"type": "string"
				},
				"erstelltDurch": {
					"type": "string"
				},
				"versionsNummer": {
					"type": "string"
				}
			},
			"type": "object"
		}
	},
	"required": [
		"global",
		"inkarnationen"
	],
	"type": "object",
	"definitions": {
		"makrodefinition": {
			"additionalProperties": false,
			"properties": {
				"name": {
					"type": "string"
				},
				"wert": {
					"type": "string"
				}
			},
			"required": [
				"name",
				"wert"
			],
			"type": "object"
		},
		"kernsystem": {
			"additionalProperties": false,
			"properties": {
				"inkarnationsName": {
					"type": "string"
				},
				"wartezeit": {
					"type": "number"
				},
				"mitInkarnationsName": {
					"type": "boolean"
				}
			},
			"required": [
				"inkarnationsName"
			],
			"type": "object"
		},
		"zugangDav": {
			"additionalProperties": false,
			"properties": {
				"adresse": {
					"type": "string"
				},
				"passWord": {
					"type": "string"
				},
				"port": {
					"type": "string"
				},
				"userName": {
					"type": "string"
				}
			},
			"required": [
				"userName",
				"passWord",
				"adresse",
				"port"
			],
			"type": "object"
		},
		"usvDefinition": {
			"additionalProperties": false,
			"properties": {
				"pid": {
					"type": "string"
				}
			},
			"required": [
				"pid"
			],
			"type": "object"
		},
		"global": {
			"additionalProperties": false,
			"properties": {
				"kernsysteme": {
					"items": {
						"$ref": "#definitions/kernsystem"
					},
					"type": "array"
				},
				"makrodefinitionen": {
					"items": {
						"$ref": "#definitions/makrodefinition"
					},
					"type": "array"
				},
				"zugangDav": {
					"$ref": "#definitions/zugangDav"
				},
				"usv": {
					"$ref": "#definitions/usvDefinition"
				},
				"rechner": {
					"items": {
						"$ref": "rechner.json"
					},
					"type": "array"
				}
			},
			"required": [
				"zugangDav"
			],
			"type": "object"
		},
		"startArt": {
			"additionalProperties": false,
			"properties": {
				"option": {
					"type": "string",
					"enum": [
						"automatisch",
						"manuell",
						"intervallrelativ",
						"intervallabsolut"
					],
					"default": "automatisch"
				},
				"neuStart": {
					"type": "boolean",
					"default": true
				},
				"intervall": {
					"type": "string"
				}
			},
			"type": "object"
		},
		"startBedingung": {
			"additionalProperties": false,
			"properties": {
				"vorgaenger": {
					"type": "string"
				},
				"warteart": {
					"type": "string",
					"enum": [
						"beginn",
						"ende"
					],
					"default": "beginn"
				},
				"rechner": {
					"type": "string"
				},
				"wartezeit": {
					"type": "string"
				}
			},
			"type": "object"
		},
		"startFehlerverhalten": {
			"additionalProperties": false,
			"properties": {
				"option": {
					"type": "string",
					"enum": [
						"beenden",
						"abbruch",
						"ignorieren"
					],
					"default": "ignorieren"
				},
				"wiederholungen": {
					"type": "string"
				}
			},
			"type": "object"
		},
		"stopBedingung": {
			"additionalProperties": false,
			"properties": {
				"nachfolger": {
					"type": "string"
				},
				"rechner": {
					"type": "string"
				},
				"wartezeit": {
					"type": "string"
				}
			},
			"required": [
				"vorgaenger"
			],
			"type": "object"
		},
		"stopFehlerverhalten": {
			"additionalProperties": false,
			"properties": {
				"option": {
					"type": "string",
					"enum": [
						"stopp",
						"abbruch",
						"ignorieren"
					],
					"default": "ignorieren"
				},
				"wiederholungen": {
					"type": "string"
				}
			},
			"type": "object"
		},
		"inkarnationsDefinition": {
			"additionalProperties": false,
			"properties": {
				"applikation": {
					"type": "string"
				},
				"aufrufParameter": {
					"items": {
						"type": "string"
					},
					"type": "array"
				},
				"inkarnationsTyp": {
					"type": "string",
					"enum": [
						"dav",
						"wrapped",
						"extern"
					],
					"default": "dav"
				},
				"inkarnationsName": {
					"type": "string"
				},
				"startArt": {
					"$ref": "#definitions/startArt"
				},
				"startBedingungen": {
					"items": {
						"$ref": "#definitions/startBedingung"
					},
					"type": "array"
				},
				"startFehlerVerhalten": {
					"$ref": "#definitions/startFehlerverhalten"
				},
				"stoppBedingungen": {
					"items": {
						"$ref": "#definitions/stopBedingung"
					},
					"type": "array"
				},
				"stoppFehlerVerhalten": {
					"$ref": "#definitions/stopFehlerverhalten"
				}
			},
			"required": [
				"startBedingungen",
				"aufrufParameter",
				"applikation",
				"startArt",
				"stoppBedingungen",
				"startFehlerVerhalten",
				"stoppFehlerVerhalten",
				"inkarnationsName"
			],
			"type": "object"
		}
	}
}
